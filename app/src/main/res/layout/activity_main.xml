<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tencent.richeditor.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="top"
            android:text="Nothing gonna change my love for you"
            />
        <HorizontalScrollView android:id="@+id/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scrollbars="none">

            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.tencent.richeditor.view.SelectableImageButton
                    android:id="@+id/bold"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/format_bold"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground"
                    >
                </com.tencent.richeditor.view.SelectableImageButton>

                <ImageButton android:id="@+id/italic"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/format_italic"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

                <ImageButton android:id="@+id/underline"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/format_underlined"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

                <ImageButton android:id="@+id/strikethrough"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/format_strikethrough"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

                <ImageButton android:id="@+id/bullet"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/format_list_bulleted"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

                <ImageButton android:id="@+id/number"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/format_list_numbered"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

                <ImageButton android:id="@+id/checkbox"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/check_box"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

                <ImageButton android:id="@+id/quote"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/format_quote"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

                <ImageButton android:id="@+id/color"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/format_color"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

                <ImageButton android:id="@+id/link"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/insert_link"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

                <ImageButton android:id="@+id/photo"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/insert_photo"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

                <ImageButton android:id="@+id/clear"
                    android:contentDescription="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/format_clear"
                    android:scaleType="center"
                    android:background="?android:selectableItemBackground">
                </ImageButton>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
